{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Bienvenue{% endblock %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center">
                <div class="text-center">
                    <h1 class="mx-auto my-0 text-uppercase">Snowtricks</h1>
                    <h2 class="text-white-50 mx-auto mt-2 mb-5">You know nothing John Snow...</h2>
                </div>
            </div>
        </div>
        <a id="scroll-down" href="#tricks"><i class="fa-solid fa-arrow-down fa-4x"></i></a>
    </header>
    <!-- Tricks-->
    <section class="tricks-section bg-light" id="tricks">
        <div class="container pt-4 px-1 px-lg-2">

            <div class="row align-items-stretch">

                <h1 class="mb-4">Les Tricks</h1>

                {% for trick in tricks %}
                    <div class="col-12 col-lg-4 col-xl-2_4 mb-4">
                        <article class="card h-100">
                            <a href="{{ path('trick_read', {slug: trick.slug}) }}" class="text-body">
                                <img src="{{ asset('uploads/jess-bailey-l3N9Q27zULw-unsplash.jpg') }}" alt="{{ trick.name }}" class="card-img-top">
                            </a>
                            <div class="card-body flex-grow-1 d-flex flex-column">
                                <a href="{{ path('trick_read', {slug: trick.slug}) }}" class="text-body text-decoration-none">
                                    <h2 class="h4 mb-2">{{ trick.name }}</h2>
                                </a>
                                <span class="text-muted small">Ajout√© le {{ trick.createdAt|date('d/m/Y H:i') }}</span>
                                <p class="m-0 mt-2 flex-grow-1">
                                    {{ trick.description|striptags|slice(0, 120) ~ '...' }}
                                </p>
                                <a href="{{ path('trick_read', {slug: trick.slug}) }}" class="mt-2 text-decoration-none">Voir plus</a>
                            </div>
                        </article>
                    </div>
                {% endfor %}

            </div>

        </div>
    </section>{% endblock %}
