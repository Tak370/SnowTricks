{% extends 'core.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}

    <section class="read-section pb-4 bg-light">
        <div class="trick container px-1 px-lg-2">

            <div class="row mt-4">
                <div class="col-12 col-lg-4 col-xl-3">
                    <img src="{{ asset('uploads/' ~ trick.featuredImage) }}" class="mw-100" alt="{{ trick.name }}">
                </div>
                <div class="col-12 col-lg-8 col-xl-9">
                    <h1 class="my-4">{{ trick.name }}</h1>
                    <span class="text-muted small">Ajout√© le {{ trick.createdAt|date('d/m/Y H:i') }}</span>
                    <p class="m-0 mt-2 flex-grow-1">{{ trick.description|nl2br }}</p>
                </div>
            </div>

        </div>

        <div class="comments container">
            <h2 class="comment-title mt-5">
                <span class="comment-count">{{ trick.comments|length }}</span> commentaire(s)
            </h2>

            <hr>

            <div class="comment-area mb-5">
                {{ form(commentForm, { 'attr': { 'class': 'comment-form' } }) }}
            </div>

            <div class="comment-list">
                {% for comment in trick.comments %}
                    {% include 'comment/index.html.twig' with [comment] %}
                {% endfor %}
            </div>

        </div>
    </section>

{% endblock %}
